<!DOCTYPE html>
  <html>
    <head>
      <title>Hello Friend!</title>
      <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
      <h1>To Do List</h1>
      <ul>
        @foreach(string task in Model)
          {
            <li>@task</li>
          }
      </ul>

      <p><a href="/">Add another task</a></p>

      <form action="/task/list/clear" method="post">
        <button type="submit" name="button">Clear All Tasks</button>
      </form>
    </body>
  </html>
